{
    "name": "@cartdotfun/evm-contracts",
    "version": "1.0.0",
    "description": "Cart Protocol EVM smart contracts for M2M commerce",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/cartdotfun/evm-contracts.git"
    },
    "keywords": [
        "ethereum",
        "solidity",
        "smart-contracts",
        "x402",
        "m2m",
        "ai-agents",
        "escrow"
    ],
    "scripts": {
        "compile": "hardhat compile",
        "test": "hardhat test",
        "test:gas": "REPORT_GAS=true hardhat test",
        "test:e2e": "npx ts-node scripts/e2e-test.ts",
        "test:security": "hardhat test --grep Security",
        "inspect": "npx ts-node scripts/inspect-trustengine.ts",
        "manage": "npx ts-node scripts/manage.ts",
        "deploy": "hardhat run scripts/deploy.ts",
        "deploy:sepolia": "hardhat run scripts/deploy.ts --network base-sepolia",
        "update-addresses": "./scripts/update-addresses.sh",
        "clean": "hardhat clean"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^5.0.0",
        "@openzeppelin/contracts": "^5.0.0",
        "dotenv": "^16.3.1",
        "hardhat": "^2.22.0",
        "solidity-coverage": "^0.8.17",
        "viem": "^2.21.0"
    }
}
